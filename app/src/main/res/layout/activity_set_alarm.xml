<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetAlarmActivity"
    tools:layout_editor_absoluteX="-9dp"
    tools:layout_editor_absoluteY="8dp">

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="374dp"
        android:layout_height="170dp"
        android:layout_marginTop="52dp"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker">

        <ToggleButton
            android:id="@+id/tbSunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="일"
            android:textOn="[일]" />

        <ToggleButton
            android:id="@+id/tbMonday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="월"
            android:textOn="[월]" />

        <ToggleButton
            android:id="@+id/tbTuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="화"
            android:textOn="[화]" />

        <ToggleButton
            android:id="@+id/tbWednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="수"
            android:textOn="[수]" />

        <ToggleButton
            android:id="@+id/tbThrusday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="목"
            android:textOn="[목]" />

        <ToggleButton
            android:id="@+id/tbFriday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="금"
            android:textOn="[금]" />

        <ToggleButton
            android:id="@+id/tbSaturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textOff="토"
            android:textOn="[토]" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="398dp"
        android:layout_height="74dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="clickedButtonAdd"
            android:text="저장" />

        <Button
            android:id="@+id/buttonRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="clickedRemoveCancel"
            android:text="삭제" />

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:onClick="clickedButtonCancel"
            android:text="취소" />

    </LinearLayout>

    <ScrollView
        android:layout_width="407dp"
        android:layout_height="383dp"
        android:scrollbarStyle="outsideOverlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayout"
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="알람 이름" />
            </com.google.android.material.textfield.TextInputLayout>

            <Switch
                android:id="@+id/switchVibration"
                android:layout_width="103dp"
                android:layout_height="56dp"
                android:text="진동" />

            <LinearLayout
                android:id="@+id/LayoutMission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvMission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="미션" />

                <TableLayout
                    android:id="@+id/tableMission"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/cbMission1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="미션1" />

                        <CheckBox
                            android:id="@+id/cbMission2"
                            android:layout_width="98dp"
                            android:layout_height="wrap_content"
                            android:text="미션2" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/cbMission3"
                            android:layout_width="132dp"
                            android:layout_height="wrap_content"
                            android:text="미션3" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutPenalty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPenalty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="벌칙" />

                <TableLayout
                    android:id="@+id/tablePenalty"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <CheckBox
                            android:id="@+id/cbPanelty1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="벌칙1" />

                        <CheckBox
                            android:id="@+id/cbPanelty2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="벌칙2" />
                    </TableRow>
                </TableLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>